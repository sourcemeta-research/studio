{
  "name": "vscode-studio",
  "displayName": "Sourcemeta Studio",
  "publisher": "sourcemeta",
  "description": "JSON Schema inspection, formatting, and linting tools",
  "version": "0.0.1",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sourcemeta-research/studio.git"
  },
  "activationEvents": [],
  "main": "../build/vscode/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sourcemeta-studio.openPanel",
        "title": "Open Sourcemeta Studio",
        "icon": {
          "light": "./logo.png",
          "dark": "./logo.png"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "sourcemeta-studio.openPanel",
          "group": "navigation",
          "when": "editorFocus"
        }
      ]
    },
    "configuration": {
      "title": "Sourcemeta Studio",
      "properties": {
        "sourcemeta-studio.disableBuiltInValidation": {
          "type": "boolean",
          "default": true,
          "description": "Disable VS Code's built-in JSON schema validation to prevent conflicts with Sourcemeta Studio"
        }
      }
    }
  },
  "scripts": {
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "package": "node esbuild.js --production",
    "build": "npm run compile",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "@sourcemeta/jsonschema": "^12.2.0"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "esbuild": "^0.25.12",
    "eslint": "^9.38.0",
    "typescript": "^5.3.0"
  }
}
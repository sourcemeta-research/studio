{
  "name": "sourcemeta-studio",
  "displayName": "Sourcemeta JSON Schema Studio",
  "publisher": "sourcemeta",
  "description": "JSON Schema inspection, formatting, and linting tools",
  "version": "1.0.0",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "homepage": "https://www.sourcemeta.com/",
  "categories": [
    "Linters",
    "Formatters",
    "Programming Languages",
    "AI",
    "Data Science",
    "Testing",
    "Visualization"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sourcemeta/studio.git"
  },
  "activationEvents": [],
  "main": "../build/vscode/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sourcemeta-studio.openPanel",
        "title": "Open Sourcemeta JSON Schema Studio",
        "icon": {
          "light": "./logo.png",
          "dark": "./logo.png"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "sourcemeta-studio.openPanel",
          "group": "navigation",
          "when": "editorFocus"
        }
      ]
    },
    "configuration": {
      "title": "Sourcemeta JSON Schema Studio",
      "properties": {
        "sourcemeta-studio.disableBuiltInValidation": {
          "type": "boolean",
          "default": true,
          "description": "Disable VS Code's built-in JSON schema validation to prevent conflicts with Sourcemeta JSON Schema Studio"
        }
      }
    }
  },
  "keywords": [
    "json",
    "json schema",
    "schema",
    "validation",
    "validator",
    "lint",
    "linter",
    "linting",
    "formatter",
    "formatting",
    "openapi",
    "api",
    "vscode",
    "data",
    "schema validation",
    "json lint"
  ],
  "qna": "marketplace",
  "scripts": {
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "package": "node esbuild.js --production",
    "build": "npm run compile",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "@sourcemeta/jsonschema": "^14.0.2"
  },
  "devDependencies": {
    "@types/node": "24.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.50.0",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "typescript": "^5.3.0"
  }
}

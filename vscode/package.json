{
  "name": "sourcemeta-studio",
  "displayName": "Sourcemeta Studio",
  "description": "JSON Schema inspection, formatting, and linting tools",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sourcemeta-studio.openPanel",
        "title": "Open Sourcemeta Studio",
        "icon": {
          "light": "../assets/logo.svg",
          "dark": "../assets/logo.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "sourcemeta-studio.openPanel",
          "group": "navigation",
          "when": "editorFocus"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "@sourcemeta/jsonschema": "v11.x.x"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "18.x",
    "typescript": "^5.3.0"
  }
}

{
  "name": "studio",
  "displayName": "Sourcemeta Studio",
  "publisher": "sourcemeta",
  "description": "JSON Schema inspection, formatting, and linting tools",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/vscode/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sourcemeta-studio.openPanel",
        "title": "Open Sourcemeta Studio",
        "icon": {
          "light": "../assets/logo.png",
          "dark": "../assets/logo.png"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "sourcemeta-studio.openPanel",
          "group": "navigation",
          "when": "editorFocus"
        }
      ]
    },
    "configuration": {
      "title": "Sourcemeta Studio",
      "properties": {
        "sourcemeta-studio.disableBuiltInValidation": {
          "type": "boolean",
          "default": true,
          "description": "Disable VS Code's built-in JSON schema validation to prevent conflicts with Sourcemeta Studio"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "install:all": "npm i && cd ../ui && npm i",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build:webview": "cd ../ui && npm run build",
    "build": "npm run compile && npm run build:webview",
    "pretest": "npm run compile",
    "test": "vscode-test",
    "test:headed": "vscode-test --headless=false",
    "test:watch": "vscode-test --watch",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "@sourcemeta/jsonschema": "^12.2.0"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "18.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "chai": "^6.2.0",
    "eslint": "^9.38.0",
    "mocha": "^11.7.4",
    "typescript": "^5.3.0"
  }
}
